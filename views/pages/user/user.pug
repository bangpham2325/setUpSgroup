extends ../../layout/private/manage.layout.pug

block content

  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      include ../../components/navbar.pug
      // End of Topbar
      // Begin Page Content
      // Begin Page Content
      .container-fluid
        // Page Heading
        h1.h3.mb-2.text-gray-800 Tables
        p.mb-4
          | DataTables is a third party plugin that is used to generate the demo table below.
          | For more information about DataTables, please visit the 
          a(target='_blank' href='https://datatables.net') official DataTables documentation
          | .
        // DataTales Example
        .card.shadow.mb-4
          .card-header.py-3
            h6.m-0.font-weight-bold.text-primary DataTables Example
          .card-body
            .table-responsive
              .row
                .col-sm-12.col-md-6
                  lable  Show
                  select#selectNumberRow(aria-label='Default select example' style='margin-left:10px ; width: 70px;border: 1px solid #d1d3e2;color: #6e707e')
                    option(value='5') 5
                    option(value='10') 10
                    option(value='20') 20
                    option(value='30') 30
                .col-sm-12.col-md-6
                  .input-group.rounded(style='width: 70% ;float:right ;margin-bottom:10px')
                    input#searchContent.searchContent.form-control.rounded(type='search' placeholder='Search' aria-label='Search' aria-describedby='search-addon' )

              .row
                .col-sm-12
                  table#dataTable.table.table-bordered(width='100%' cellspacing='0')
                    thead
                        tr
                          th Id
                          th Username
                          th Full name
                          th status
                          th roles
                      
                    tfoot
                      tr
                          th Id
                          th Username
                          th Full name
                          th status
                          th roles
                    tbody#user-table
              .row
                .col-sm-12.col-md-5
                  | One of two columns
                .col-sm-12.col-md-7
                  nav(aria-label='Page navigation example' style='float:right ')
                   ul.pagination



          // /.container-fluid
          // End of Main Content
          // Footer


    a.scroll-to-top.rounded(href='#page-top')
      i.fas.fa-angle-up


    include ../../components/footer.pug
block scripts
  script(src='/js/pages/user.js' type='text/javascript') 