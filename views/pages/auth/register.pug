doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Sign Up Form by Colorlib
  // Font Icon
  link(rel='stylesheet' href='authsession/fonts/material-icon/css/material-design-iconic-font.min.css')
  // Main css
  link(rel='stylesheet' href='authsession/css/style.css')
.main
  // Sign up form
  section.signup
    .container
      .signup-content
        .signup-form
          h2.form-title Sign up
          form#register-form.register-form(action='../../index.html' method='post')
            .form-group
              label(for='name')
                i.zmdi.zmdi-account.material-icons-name
              input#fullName(type='text' placeholder='Full name')
            .form-group
              label(for='email')
                i.zmdi.zmdi-email
              input#email(type='email' placeholder='Email')
            .form-group
              label(for='pass')
                i.zmdi.zmdi-lock
              input#password(type='password' placeholder='Password')
            .form-group
              label(for='re-pass')
                i.zmdi.zmdi-lock-outline
              input#re_pass(type='password' name='re_pass' placeholder='Repeat your password')
            .form-group
              input#agree-term.agree-term(type='checkbox' name='agree-term')
              label.label-agree-term(for='agree-term')
                span
                  span
                | I agree all statements in  
                a.term-service(href='#') Terms of service
            .form-group.form-button
              input#signup.form-submit(type='submit' name='signup' value='Register')
        .signup-image
          figure
            img(src='authsession/images/signup-image.jpg' alt='sing up image')
          a.signup-image-link(href='#') I am already member
  
// JS
script(src='authsession/vendor/jquery/jquery.min.js')
script(src='authsession/js/main.js')
script(src='dist/js/pages/register.js')
