extends ../../layout/public/auth.layout.pug

block content
  

  .container
    .card.o-hidden.border-0.shadow-lg.my-5
      .card-body.p-0
        // Nested Row within Card Body
        .row
          .col-lg-5.d-none.d-lg-block.bg-register-image
          .col-lg-7
            .p-5
              .text-center
                h1.h4.text-gray-900.mb-4 Create an Account!
              form#register-form
                .form-group.row
                  .col-sm-12.mb-3.mb-sm-0
                    input#fullName.form-control.form-control-user(type='text' placeholder='Full Name')
                .form-group
                  input#email.form-control.form-control-user(type='email' placeholder='Email Address')
                .form-group.row
                  .col-sm-6.mb-3.mb-sm-0
                    input#password.form-control.form-control-user(type='password' placeholder='Password')
                  .col-sm-6
                    input#exampleRepeatPassword.form-control.form-control-user(type='password' placeholder='Repeat Password')
                button.btn.btn-primary.btn-user.btn-block(type='submit')
                  | Register Account
                hr
                a.btn.btn-google.btn-user.btn-block(href='index.html')
                  i.fab.fa-google.fa-fw
                  |  Register with Google
                a.btn.btn-facebook.btn-user.btn-block(href='index.html')
                  i.fab.fa-facebook-f.fa-fw
                  |  Register with Facebook
              hr
              .text-center
                a.small(href='forgot-password.html') Forgot Password?
              .text-center
                a.small(href='login.html') Already have an account? Login!
block scripts
  //script(src='/js/middlewares/route-public.js')
  script(src='/js/pages/register.js')